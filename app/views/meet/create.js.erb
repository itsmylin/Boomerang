
$('#like-btn').bind('ajax:success', function() {

    $('#userImage').attr('src',"<%= @users.first.avatar.url(:medium) %>);
    var element = document.getElementById('username');
    // removing everything inside the node
    while (element.firstChild) {
      element.removeChild(element.firstChild);
    }
    // appending new text node
    element.appendChild(document.createTextNode(<%= @users.first.name %>));
});

